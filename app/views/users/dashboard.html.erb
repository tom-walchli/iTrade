<div class="row">
	<div class="col-sm-2 left__bar">
		<table>
			<% @user.wallets.each do |w| %>
				<tr>
					<td class="left__bar--currency"><%= w.currency.upcase %></td>
					<td class="left__bar--balance"> <%= (w.balance * 1000).to_i.to_f / 1000 %></td>
				</tr>
			<% end %> 
		</table>
	</div>

	<div class="col-sm-10">
		<h2><%= @user %></h2>
		<h3>Here'll be all sophistication!!</h3>
	</div>
</div>


